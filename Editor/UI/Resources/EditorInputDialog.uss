.dialog-root {
    padding: 16px;
    min-width: 300px;
}

.dialog-title {
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 8px;
}

.dialog-message {
    margin-bottom: 16px;
}

.dialog-input {
    width: 100%;
    margin-bottom: 16px;
}

.dialog-buttons {
    flex-direction: row;
    justify-content: flex-end;
}

.dialog-button {
    margin-left: 8px;
    min-width: 60px;
}