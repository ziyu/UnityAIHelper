.dialog-root {
    padding: 16px;
    min-width: 400px;
}

.dialog-title {
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 8px;
}

.dialog-message {
    margin-bottom: 16px;
}

.input-container {
    display: flex;
    flex-direction: row;
    gap: 8px;
    margin-bottom: 16px;
}

.dialog-input {
    flex: 1;
}

.dialog-buttons {
    flex-direction: row;
    justify-content: flex-end;
}

.dialog-button {
    margin-left: 8px;
    min-width: 60px;
}